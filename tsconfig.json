{
  "compilerOptions": {
    "module": "amd",
    "removeComments": true,
    "pretty": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es6",
    "moduleResolution": "node",
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "ququmber-ui/*": ["src/*"],
      "listlab-api/*": ["node_modules/listlab-api/src/*"]
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}
